@model KutuphaneAppWithIoC.Core.Services.Dto.BookDto

<div class="form-group">
    <label class="col-lg-2 control-label">ISBN</label>
    <div class="col-lg-10">
        <input type="hidden" name="Isbn" class="form-control" value="@Model.Isbn">
        <label style="padding-top: 7px;">@Model.Isbn</label>
    </div>
</div>
<div class="form-group">
    <label class="col-lg-2 control-label">Başlık</label>
    <div class="col-lg-10">
        <input type="text" name="Title" class="form-control" required value="@Model.Title">
    </div>
</div>
<div class="form-group">
    <label class="col-lg-2 control-label">Yazar</label>
    <div class="col-lg-10">
        <input type="text" name="Author" class="form-control" required value="@Model.Author">
    </div>
</div>

<div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
        <button class="btn btn-send" type="button" onclick="bookStore.updateBook()">Güncelle</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Vazgeç</button>
    </div>
</div>